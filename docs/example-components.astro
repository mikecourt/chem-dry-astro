<!-- src/components/ContactForm.astro -->
<!-- ============================================ -->

<section class="py-16 md:py-24 bg-gradient-brand-soft" id="contact">
  <div class="container-brand max-w-2xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-chemdry-blue mb-4">
        Get Your Free Quote
      </h2>
      <p class="text-xl text-chemdry-body-text">
        Fill out the form below or call us at <a href="tel:4805550100" class="phone-link">(480) 555-0100</a>
      </p>
    </div>

    <form class="bg-white rounded-brand shadow-brand p-8 space-y-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <label for="name" class="block text-sm font-medium text-chemdry-blue mb-2">
            Your Name *
          </label>
          <input 
            type="text" 
            id="name" 
            name="name" 
            required 
            class="input-brand"
            placeholder="John Smith"
          />
        </div>

        <div>
          <label for="phone" class="block text-sm font-medium text-chemdry-blue mb-2">
            Phone Number *
          </label>
          <input 
            type="tel" 
            id="phone" 
            name="phone" 
            required 
            class="input-brand"
            placeholder="(480) 555-0123"
          />
        </div>
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-chemdry-blue mb-2">
          Email Address *
        </label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="input-brand"
          placeholder="john@example.com"
        />
      </div>

      <div>
        <label for="address" class="block text-sm font-medium text-chemdry-blue mb-2">
          Address
        </label>
        <input 
          type="text" 
          id="address" 
          name="address" 
          class="input-brand"
          placeholder="123 Main St, Mesa, AZ 85201"
        />
      </div>

      <div>
        <label for="service" class="block text-sm font-medium text-chemdry-blue mb-2">
          Service Needed
        </label>
        <select id="service" name="service" class="input-brand">
          <option value="">Select a service...</option>
          <option value="carpet">Carpet Cleaning</option>
          <option value="upholstery">Upholstery Cleaning</option>
          <option value="tile">Tile & Grout Cleaning</option>
          <option value="area-rug">Area Rug Cleaning</option>
          <option value="other">Other</option>
        </select>
      </div>

      <div>
        <label for="message" class="block text-sm font-medium text-chemdry-blue mb-2">
          Additional Details
        </label>
        <textarea 
          id="message" 
          name="message" 
          class="textarea-brand"
          placeholder="Tell us about your cleaning needs..."
        ></textarea>
      </div>

      <button type="submit" class="btn-cta w-full">
        Get My Free Quote
      </button>

      <p class="text-sm text-chemdry-body-text text-center">
        We'll respond within 24 hours. For immediate assistance, call <a href="tel:4805550100" class="text-chemdry-blue hover:text-chemdry-green">(480) 555-0100</a>
      </p>
    </form>
  </div>
</section>

