---
import config from "@/config/config.json";
import ImageMod from "./ImageMod.astro";

const { src }: { src?: string } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;

const parsedWidth = Number(String(logo_width).replace("px", ""));
const parsedHeight = Number(String(logo_height).replace("px", ""));
const minResponsiveWidth = Math.round(parsedWidth * 0.6);
const clampedWidth = `clamp(${minResponsiveWidth}px, 40vw, ${parsedWidth}px)`;
---

<a href="/" class="navbar-brand inline-block">
  {
    src || logo ? (
      <>
        <ImageMod
          src={src ? src : logo}
          class={`inline-block object-contain h-auto w-full`}
          width={parsedWidth * 2}
          height={parsedHeight * 2}
          alt={title}
          style={{
            width: clampedWidth,
            height: "auto",
          }}
          loading={"eager"}
          format="webp"
        />
      </>
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
