---
import { markdownify } from "@/lib/utils/textConverter";
import type { CollectionEntry } from "astro:content";
import DynamicIcon from "@/helpers/DynamicIcon";
import CustomHeading from "../CustomHeading.astro";

type Props = {
  testimonial: CollectionEntry<"homepage">["data"]["testimonial"];
};

const { testimonial } = Astro.props;
---

<section class="section bg-light">
  <div class="container">
    {/* Section Header */}
    <div class="text-center">
      {
        testimonial.subtitle && (
          <p
            set:html={markdownify(testimonial.subtitle)}
            class="text-sm font-semibold tracking-wider uppercase text-accent mb-3"
            data-aos="fade-up-sm"
          />
        )
      }

      {
        testimonial.title && (
          <CustomHeading
            as="h2"
            text={testimonial.title}
            svgColor="text-accent"
            class="text-4xl md:text-5xl font-bold text-dark mb-4 md:mb-6"
            dataAos="fade-up-sm"
            dataAosDelay="50"
          />
        )
      }

      {
        testimonial.content && (
          <p
            set:html={markdownify(testimonial.content)}
            class="text-lg md:text-xl text-text/80 max-w-3xl mx-auto mb-8 md:mb-12"
            data-aos="fade-up-sm"
            data-aos-delay="100"
          />
        )
      }
    </div>

    {/* Masonry Grid */}
    <div class="columns-1 md:columns-2 lg:columns-3 gap-6 space-y-6" data-aos="fade-up-sm" data-aos-delay="100">
      {
        testimonial.review.map((review, index) => (
          <div
            class="break-inside-avoid mb-6 rounded-lg border border-border bg-body shadow-sm hover:shadow-md transition-shadow duration-300"
            data-aos="fade-up-sm"
            data-aos-delay={150 + index * 50}
          >
            <div class="px-6 py-8">
              <DynamicIcon icon="FaQuoteLeft" className="text-4xl md:text-5xl text-primary mb-4" />
              {
                review.says && (
                  <p class="mb-6 text-base md:text-lg leading-relaxed text-text/90" set:html={markdownify(review.says)} />
                )
              }
              <div class="flex items-center gap-3">
                {review.image ? (
                  <img
                    src={review.image}
                    alt={review.name}
                    class="w-12 h-12 md:w-14 md:h-14 rounded-full object-cover border-2 border-primary/20"
                  />
                ) : (
                  <DynamicIcon
                    icon="FaRegCircleUser"
                    className="text-4xl md:text-5xl text-primary/60"
                  />
                )}
                <div>
                  {review.name && <h4 class="text-lg md:text-xl font-bold text-dark">{review.name}</h4>}
                  {review.about && <p class="text-sm md:text-base text-text/70">{review.about}</p>}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  /* Ensure masonry layout works smoothly */
  .columns-1 {
    column-gap: 1.5rem;
  }
</style>
